<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_air_quality"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/staatliches_regular"
                android:text="@string/air_quality"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/text_condition_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/staatliches_regular"
                android:paddingBottom="16dp"
                android:text="@string/good"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/text_name_card_view" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="15dp"
                android:max="100"
                android:progressDrawable="@drawable/custom_progress_bar_air_quality"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <ImageView
                android:id="@+id/image_card_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="32.5dp"
                android:src="@drawable/ic_air_quality"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>